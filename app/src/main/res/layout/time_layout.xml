<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent"
	android:layout_width="fill_parent"
	android:layout_marginTop="12dp"
	android:weightSum="4"
	android:orientation="vertical">
    <!--android:layout_gravity="center_horizontal"-->
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:weightSum="2"
		android:orientation="horizontal">

		<TextView
			android:textStyle="bold"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:textAlignment="center"
			android:paddingTop="10dp"
			android:textSize="16sp"
			android:layout_weight="1"
			android:text="@string/startTime"/>

		<TextView
			android:id="@+id/startTime"
			android:textStyle="bold"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:textAlignment="center"
			android:paddingTop="10dp"
			android:layout_weight="1"
			android:textSize="16sp"
			/>

	</LinearLayout>

	<include layout="@layout/time_picker" android:id="@+id/pickerOne" />

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:weightSum="2"
		android:orientation="horizontal">

		<TextView
			android:textStyle="bold"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:textAlignment="center"
			android:paddingTop="10dp"
			android:textSize="16sp"
			android:layout_weight="1"
			android:text="@string/startTime"/>

		<TextView
			android:textStyle="bold"
			android:id="@+id/endTime"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:textAlignment="center"
			android:paddingTop="10dp"
			android:layout_weight="1"
			android:textSize="16sp"
			/>

	</LinearLayout>
	<include layout="@layout/time_picker" android:id="@+id/pickerTwo" />

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:weightSum="2"
		android:orientation="horizontal">

		<TextView
			android:textStyle="bold"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:textAlignment="center"
			android:paddingTop="10dp"
			android:textSize="16sp"
			android:layout_weight="1"
			android:text="@string/hours_worked"/>

        <TextView
			android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:textAlignment="center"
            android:paddingTop="10dp"
            android:textSize="16sp"
            android:layout_weight="1"
            android:text="@string/earned"/>



	</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">

        <TextView
			android:textStyle="bold"
            android:id="@+id/hoursWorked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:paddingTop="10dp"
            android:layout_weight="1"
            android:textSize="16sp"
            />

        <TextView
			android:textStyle="bold"
            android:id="@+id/moneyEarned"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:paddingTop="10dp"
            android:layout_weight="1"
            android:textSize="16sp"
            android:textColor="@color/money"
            />

    </LinearLayout>

</LinearLayout>